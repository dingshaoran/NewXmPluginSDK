<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="@dimen/alertdialog_content_panel_message_padding"
        android:paddingRight="@dimen/alertdialog_content_panel_message_padding"
        android:text="@string/alarmcreate_sleep_hint"
        android:textColor="@color/dialog_sub_title_txt_color"
        android:textSize="@dimen/alertdialog_message_text_size" />

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/alertdialog_content_panel_message_padding"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:drawableLeft="@drawable/select_checkbox_blue"
        android:drawablePadding="6dp"
        android:gravity="left|center_vertical"
        android:paddingRight="@dimen/alertdialog_content_panel_message_padding"
        android:text="@string/alarmcreate_sleep_check"
        android:textColor="@color/color_60000000"
        android:textSize="@dimen/alertdialog_message_text_size" />
</LinearLayout>